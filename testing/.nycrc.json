{
  "all": true,
  "include": [
    "unit/**/*.js",
    "../noesis-docs/**/*.js",
    "../platform/**/*.js"
  ],
  "exclude": [
    "unit/**/*.test.js",
    "unit/**/*.spec.js",
    "unit/**/node_modules/**",
    "cypress/**",
    "scripts/**"
  ],
  "reporter": [
    "text",
    "text-summary", 
    "html",
    "lcov"
  ],
  "report-dir": "coverage",
  "temp-dir": ".nyc_output",
  "check-coverage": false,
  "lines": 10,
  "statements": 10,
  "functions": 10,
  "branches": 10
}
