{
  "name": "noesis-ai-tutor-framework",
  "version": "1.0.0",
  "description": "An AI-powered tutoring framework with interactive Jekyll documentation and comprehensive testing",
  "main": "index.js",
  "scripts": {
    "test": "cd testing && ./scripts/fail-fast.sh all",
    "test:wip": "cd testing && ./scripts/fail-fast.sh wip",
    "test:smoke": "cd testing && ./scripts/fail-fast.sh smoke",
    "test:unit": "cd testing && jest",
    "test:coverage": "cd testing && nyc jest",
    "test:open": "cd testing && cypress open",
    "test:report": "cd testing && cypress run",
    "server:start": "cd testing && ./scripts/jekyll-server.sh start",
    "server:stop": "cd testing && ./scripts/jekyll-server.sh stop",
    "server:restart": "cd testing && ./scripts/jekyll-server.sh restart",
    "server:status": "cd testing && ./scripts/jekyll-server.sh status",
    "dev": "npm run server:start && npm test",
    "cypress:verify": "cd testing && cypress verify",
    "setup": "npm install && npm run cypress:verify && npm run server:start",
    "docs:serve": "cd noesis-docs && bundle exec jekyll serve",
    "docs:build": "cd noesis-docs && bundle exec jekyll build"
  },
  "keywords": [
    "education",
    "ai",
    "tutoring",
    "jekyll",
    "testing",
    "cypress",
    "cucumber",
    "bdd"
  ],
  "author": "Noesis AI Tutor Framework Contributors",
  "license": "MIT",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^20.0.2",
    "@cypress-audit/lighthouse": "^1.4.2",
    "@cypress/webpack-preprocessor": "^6.0.1",
    "cypress": "^13.6.0",
    "cypress-axe": "^1.5.0",
    "cypress-real-events": "^1.14.0",
    "jest": "^29.7.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "nyc": "^17.1.0",
    "webpack": "^5.89.0"
  },
  "workspaces": [
    "testing",
    "platform/*"
  ]
}
