{
  "name": "noesis-ai-tutor-framework",
  "version": "1.0.0",
  "description": "An AI-powered tutoring framework with interactive Jekyll documentation and comprehensive testing",
  "main": "index.js",
  "scripts": {
    "// Core Commands": "",
    "dev": "npm run start && npm run test:watch",
    "start": "testing/scripts/jekyll-server.sh start",
    "stop": "testing/scripts/jekyll-server.sh stop",
    "restart": "testing/scripts/jekyll-server.sh restart",
    "setup": "npm install && npm --prefix testing run cypress:verify && npm run start",
    
    "// Testing": "",
    "test": "testing/scripts/fail-fast.sh all",
    "test:unit": "npm --prefix testing run test:unit",
    "test:e2e": "npm --prefix testing run test:e2e:coverage",
    "test:watch": "testing/scripts/dev-coverage-watch.sh",
    "test:ci": "npm --prefix testing run test:ci",
    
    "// Testing Subsets": "",
    "test:smoke": "testing/scripts/fail-fast.sh smoke",
    "test:wip": "testing/scripts/fail-fast.sh wip",
    
    "// Coverage": "",
    "coverage": "testing/scripts/coverage-combined.sh",
    "coverage:open": "open testing/coverage/index.html",
    "coverage:stats": "testing/scripts/coverage-stats.sh",
    "coverage:reset": "npm --prefix testing run coverage:reset",
    
    "// Documentation": "",
    "docs": "bundle exec jekyll serve --source noesis-docs",
    "docs:build": "bundle exec jekyll build --source noesis-docs"
  },
  "keywords": [
    "education",
    "ai",
    "tutoring",
    "jekyll",
    "testing",
    "cypress",
    "cucumber",
    "bdd"
  ],
  "author": "Noesis AI Tutor Framework Contributors",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@badeball/cypress-cucumber-preprocessor": "^20.0.2",
    "@cypress-audit/lighthouse": "^1.4.2",
    "@cypress/code-coverage": "^3.14.5",
    "@cypress/webpack-preprocessor": "^6.0.1",
    "babel-loader": "^10.0.0",
    "babel-plugin-istanbul": "^7.0.0",
    "cypress": "^13.6.0",
    "cypress-axe": "^1.5.0",
    "cypress-real-events": "^1.14.0",
    "istanbul-lib-coverage": "^3.2.2",
    "jest": "^29.7.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "webpack": "^5.89.0"
  },
  "workspaces": [
    "testing",
    "platform/*"
  ]
}
